<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/settingsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/settingsInfoButton"
            android:text="@string/settings_screen_title"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/settingsInfoButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/round_icon_button"
            android:contentDescription="@string/settings_info_desc"
            android:gravity="center"
            android:text="i"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            android:fontFamily="serif" />
    </RelativeLayout>

    <TextView
        android:id="@+id/settingsSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/settings_screen_subtitle"
        android:textSize="14sp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#1E232C"
        app:cardCornerRadius="14dp"
        app:strokeColor="#394251"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/overlaySectionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/overlay_permission_section_title"
                android:textColor="#FFF4F4F4"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/overlayStatusValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/overlay_permission_status_default"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/checkOverlayButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:maxLines="1"
                    android:text="@string/check_status_button"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFFFF"
                    app:backgroundTint="#313847"
                    app:cornerRadius="12dp"
                    app:strokeColor="#515A6B"
                    app:strokeWidth="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/openOverlaySettingsButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1.1"
                    android:maxLines="1"
                    android:text="@string/open_overlay_settings_button"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFFFF"
                    app:backgroundTint="#4A4F5E"
                    app:cornerRadius="12dp"
                    app:strokeColor="#6A7285"
                    app:strokeWidth="1dp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:cardBackgroundColor="#1E232C"
        app:cardCornerRadius="14dp"
        app:strokeColor="#394251"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/notificationSectionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notification_permission_section_title"
                android:textColor="#FFF4F4F4"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notificationStatusValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/notification_permission_status_default"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/grantNotificationButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="@string/grant_notification_permission_button"
                android:textAllCaps="false"
                android:textColor="#FFFFFFFF"
                app:backgroundTint="#313847"
                app:cornerRadius="12dp"
                app:strokeColor="#515A6B"
                app:strokeWidth="1dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:cardBackgroundColor="#1E232C"
        app:cardCornerRadius="14dp"
        app:strokeColor="#394251"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/languageSectionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/language_section_title"
                android:textColor="#FFF4F4F4"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/currentLanguageValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/current_language_default"
                android:textColor="#FFFFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/englishLanguageButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/language_english"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFFFF"
                    app:backgroundTint="#313847"
                    app:cornerRadius="12dp"
                    app:strokeColor="#515A6B"
                    app:strokeWidth="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/germanLanguageButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="@string/language_german"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFFFF"
                    app:backgroundTint="#4A4F5E"
                    app:cornerRadius="12dp"
                    app:strokeColor="#6A7285"
                    app:strokeWidth="1dp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
